<section class="about-us-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-5 col-lg-4 order-2 order-md-1 about-us-image-backbgroud">
        <div class="about-us-image-wrapper">
          {%- if section.settings.section_image -%}
            <img src="{{ section.settings.section_image | image_url: width: 600, height: 750 }}" alt="About Us Image" class="img-fluid" width="600" height="750"> 
          </div>
      </div>
      <div class="col-md-7 col-lg-6 offset-lg-1 order-1 order-md-2">
        <h2>{{ section.settings.title }}</h2>
        <p>{{ section.settings.description }}</p>
        <a href="{{ section.settings.button_link }}" class="btn btn-primary">{{ section.settings.button_text }}</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Us Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "About Us"
    },
    {
      "type": "image_picker",
      "id": "section_image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "Learn more about our mission and values."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Read More"
    }
  ],
  "presets": [{"name": "About Us Section"}]
}
{% endschema %}
